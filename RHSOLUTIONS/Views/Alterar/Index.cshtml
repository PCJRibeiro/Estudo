@model FuncionarioModel
@{
    ViewData["Title"] = "Index";
}

<body style="margin-bottom: 0%">
        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-2 bg-dark min-vh-100">
                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">

                            <span class="fs-5 d-none d-sm-inline ">Bem Vindo </span>

                        </a>
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item">
                                <a class="nav-link align-middle px-0" asp-controller="Home" asp-action="Index">
                                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li>
                                <a data-bs-toggle="collapse" asp-controller="Ponto" asp-action="Index" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-clock"></i> <span class="ms-1 d-none d-sm-inline">Ponto eletrônico</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Folha" asp-action="Index" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Folhas de pagamento</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Ferias" asp-action="Index" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-airplane"></i> <span class="ms-1 d-none d-sm-inline">Férias</span>
                                </a>
                            </li>
                            <li>
                                <a data-bs-toggle="collapse" asp-controller="Login" asp-action="Index" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-box-arrow-in-left"></i> <span class="ms-1 d-none d-sm-inline">Sair</span>
                                </a>
                            </li>
                        </ul>
                        <hr>
                    </div>
                </div>
                <div>
                </div>
                <div class="container">
                    <div class="row border Regular shadow" style="margin-top:20px; margin-bottom:20px">
                        <a>
                            <i class="fs-4 bi-file-person-fill" style="font-size:30px; margin-right: 20px; margin-left:10px"></i><span style="font-size:30px">Alteração de dados pessoais</span>
                        </a>
                    </div>
                    <form>
                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" class="form-control" asp-for="Nome" aria-describedby="emailHelp" placeholder="Nome">
                        </div>
                        <div class="form-group">
                            <label>Telefone</label>
                            <input type="tel" class="form-control" asp-for="Telefone" placeholder="11 00000-0000">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
                        </div>
                        <div class="form-group">
                            <label>Cargo</label>
                            <input type="text" class="form-control" asp-for="CargoFunc" placeholder="Ex: Gerente">
                        </div>
                        <div class="form-group">
                            <label>Endereço</label>
                            <input type="text" class="form-control" asp-for="Endereco" placeholder="Ex: Rua das flores">
                        </div>
                        <div class="form-group">
                            <label>Numero</label>
                            <input type="number" class="form-control" asp-for="Numero" placeholder="Ex: 123">
                        </div>
                        <div class="form-group">
                            <label>Complemento</label>
                            <input type="text" class="form-control" asp-for="Complemento" placeholder="Ex: apto 2">
                        </div>
                        <div class="form-group">
                            <label>Cidade</label>
                            <input type="text" class="form-control" asp-for="Cidade" placeholder="Ex: São Paulo">
                        </div>
                        <div class="form-group">
                            <label>Cep</label>
                            <input type="text" class="form-control" asp-for="Cep" placeholder="Ex: 00000-000">
                        </div>
                        <button type="submit" asp-controller="Alterar" asp-action="AlterarDados" class="btn btn-primary">Fazer Alteração</button>
                    </form>
                </div>
            </div>
        </div>
</body>

