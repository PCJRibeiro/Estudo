            <script>
                    // Função para mostrar/ocultar as divs de período com base na seleção do usuário
                    function togglePeriodDivs() {
                        var selectedValue = document.querySelector('input[name="Periodos"]:checked').value;

                        // Oculta todas as divs de período
                        document.getElementById("divPeriod1").style.display = "none";
                        document.getElementById("divPeriod2").style.display = "none";
                        document.getElementById("divPeriod3").style.display = "none";


                        // Mostra a div de período correspondente à seleção
                        if (selectedValue === "1") {
                            document.getElementById("divPeriod1").style.display = "block";
                            document.getElementById("Enviar").style.display = "block";
                        } else if (selectedValue === "2") {
                            document.getElementById("divPeriod1").style.display = "block";
                            document.getElementById("divPeriod2").style.display = "block";
                            document.getElementById("Enviar").style.display = "block";
                        } else if (selectedValue === "3") {
                            document.getElementById("divPeriod1").style.display = "block";
                            document.getElementById("divPeriod2").style.display = "block";
                            document.getElementById("divPeriod3").style.display = "block";
                            document.getElementById("Enviar").style.display = "block";
                        }
                    }

                    // Adicione um ouvinte de evento para os botões de opção de rádio
                    var radioButtons = document.querySelectorAll('input[name="Periodos"]');
                    radioButtons.forEach(function (radioButton) {
                        radioButton.addEventListener("change", togglePeriodDivs);
                    });

                    // Chame a função inicialmente para refletir o estado inicial da seleção
                    togglePeriodDivs();
            </script>

